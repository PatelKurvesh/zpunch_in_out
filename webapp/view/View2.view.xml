<mvc:View
    controllerName="zpunchinout.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        showNavButton="true"
        navButtonPress="onPageNavButtonPress"
    >
        <Table
            headerText="Products"
            items="{/EmployeePunchingDetails}"
            class="sapUiResponsiveContentPadding"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="Time Tracking Details ({jsonModel>/count})" />
                    <ToolbarSpacer />
                    <Button
                        text="Create Employee"
                        class="sapUiMediumMargin"
                        type="Emphasized"
                        icon="sap-icon://add"
                        press="onCreateEmployeeButtonPress"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column mergeDuplicates="true">
                    <header>
                        <Text text="Employee Name" />
                    </header>
                </Column>
                <Column
                    hAlign="Center"
                    mergeDuplicates="true"
                >
                    <header>
                        <Text text="Email" />
                    </header>
                </Column>

                <Column hAlign="Center">
                    <header>
                        <Text text="Punch Date" />
                    </header>
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <header>
                        <Text text="Punch In" />
                    </header>
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <header>
                        <Text text="Punch Out" />
                    </header>
                </Column>

                <Column hAlign="Center">
                    <header>
                        <Text text="Arrival Status" />
                    </header>
                </Column>
            </columns>
            <ColumnListItem vAlign="Middle">
                <Label
                    text="{FIRST_NAME} {LAST_NAME}"
                    design="Bold"
                />
                <Text text="{EMAIL}" />
                <Label
                    text="{PUNCH_DATE}"
                    design="Bold"
                />
                <Text text="{PUNCH_IN}" />
                <Text text="{PUNCH_OUT}" />

                <ObjectNumber
                    number="{ARRIVAL_STATUS}"
                    state="{
					path: 'ARRIVAL_STATUS', 
					formatter: '.formatter.formatArrivalStatus' 
				}"
                />

                <Text text="{PHONE_NO}" />
            </ColumnListItem>
        </Table>
    </Page>
</mvc:View>
