<mvc:View
    controllerName="zpunchinout.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page showNavButton="true" navButtonPress="onBackForward">
	<Button text="Create Employee" class="sapUiMediumMargin" type="Emphasized" icon="sap-icon://add-employee" press="onCreateEmployee"></Button>
        <Table
            headerText="Products"
            items="{/EmployeePunchingDetails}"
        >
            <columns>
                <Column mergeDuplicates="true">
                    <header>
                        <Text text="Employee Name" />
                    </header>
                </Column>
               
				<Column hAlign="Center">
                    <header>
                        <Text text="Punch Date" />
                    </header>
                </Column>
				<Column hAlign="Center">
                    <header>
                        <Text text="Gender" />
                    </header>
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <header>
                        <Text text="PUNCH_IN" />
                    </header>
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
					
                >
                    <header>
                        <Text text="Email" />
                    </header>
                </Column>
                <Column hAlign="Center">
                    <header>
                        <Text text="ARRIVAL_STATUS" />
                    </header>
                </Column>
                
            </columns>
            <ColumnListItem vAlign="Middle">
                <Text text="{FIRST_NAME} {LAST_NAME}" />
                <Text text="{PUNCH_DATE}" />
                <Text text="{GENDER}" />
                <ObjectIdentifier
                    title="{PUNCH_IN}" 
                    text="To {PUNCH_OUT}"
                />
                <Text text="{EMAIL}" width="100%" />
                <ObjectNumber
				number="{ARRIVAL_STATUS}" 
				state="{
					path: 'ARRIVAL_STATUS', 
					formatter: '.formatter.formatArrivalStatus' 
				}"
				/>

                <Text text="{PHONE_NO}" />
            </ColumnListItem>
        </Table>
    </Page>
</mvc:View>
