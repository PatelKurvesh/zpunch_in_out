<mvc:View
    controllerName="zpunchinout.controller.View2"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        showNavButton="true"
        navButtonPress="onPageNavButtonPress"
    >
        <!-- <headerContent>
            <ToolbarSpacer />
            <Button
                icon="sap-icon://forward"
                press="onButtonPressEmployee"
            />
        </headerContent> -->
        <Table
            headerText="Products"
            items="{/EmployeeSet}"
            class="sapUiResponsiveContentPadding"
            sticky="ColumnHeaders"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <Title text="Time Tracking Details ({jsonModel>/count})" />
                    <ToolbarSpacer />
                    <Button
                        text="Create Employee"
                        class="sapUiMediumMargin"
                        type="Emphasized"
                        icon="sap-icon://add"
                        press="onCreateEmployeeButtonPress"
                    />
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column mergeDuplicates="true">
                    <header>
                        <Text text="Employee Name" />
                    </header>
                </Column>
                <Column
                    hAlign="Center"
                    mergeDuplicates="true"
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <header>
                        <Text text="Email" />
                    </header>
                </Column>

                <Column hAlign="Center" minScreenWidth="Tablet"
                    demandPopin="true">
                    <header>
                        <Text text="Designation" />
                    </header>
                </Column>
                <Column hAlign="Center">
                    <header>
                        <Text text="Expirence" />
                    </header>
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                >
                    <header>
                        <Text text="Gender" />
                    </header>
                </Column>

                <Column
                    hAlign="Center"
                    minScreenWidth="Tablet"
                    demandPopin="true"
                >
                    <header>
                        <Text text="Phone No." />
                    </header>
                </Column>
            </columns>
            <ColumnListItem vAlign="Middle">
                <Label
                    text="{FIRST_NAME} {LAST_NAME}"
                    design="Bold"
                />
                <Text text="{EMAIL}" />
                <Label
                    text="{DESIGNATION}"
                    design="Bold"
                />
                <Text text="{EXPERIENCE}" />
                <Text text="{GENDER}" />

                <Text text="{PHONE_NO}" />
            </ColumnListItem>
        </Table>
    </Page>
</mvc:View>
