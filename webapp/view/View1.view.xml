<mvc:View
    controllerName="zpunchinout.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
>
    <Page
        title="{i18n>title}"
    >
        <VBox
            class="centerCardContainer"
            justifyContent="Center"
            alignItems="Center"
            width="100%"
            height="100%"
        >
            <f:Card
                class="sapUiMediumMargin"
                width="300px"
            >
                <f:header>
                    <card:Header
                        title="Punch In-Out"
                        subtitle="Good Morning Guys"
                        iconSrc="/image/logo.JPG"
                    />
                </f:header>
                <f:content>
                    <VBox
                        height="110px"
                        class="sapUiSmallMargin"
                        justifyContent="SpaceBetween"
                        width="100%"
                    >
                        <HBox
                            renderType="Bare"
                            justifyContent="SpaceBetween"
                        >
                            <Button
                                text="Punch In"
                                type="Accept"
                                width="100%"
								press="onPunchInButtonPress"
                                icon="sap-icon://qr-code"
                            />
							
                        </HBox>
                        <HBox
                            renderType="Bare"
                            justifyContent="SpaceBetween"
                        >
                            <Button
                                text="Punch Out"
                                type="Reject"
                                width="100%"
								press="onPunchOutButtonPress"
                                icon="sap-icon://qr-code"
                            />
                        </HBox>
                    </VBox>
                </f:content>
            </f:Card>
        </VBox>
    </Page>
</mvc:View>
