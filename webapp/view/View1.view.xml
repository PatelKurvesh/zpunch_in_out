<mvc:View controllerName="zpunchinout.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:card="sap.f.cards"
	xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
    	<f:Card class="sapUiMediumMargin" width="300px">
		<f:header>
			<card:Header
				title="Punch In-Out"
				subtitle="Good Morning Guys"
				iconSrc="/image/logo.JPG" /> 
		</f:header>
		<f:content>
			<VBox
				height="110px"
				class="sapUiSmallMargin"
				justifyContent="SpaceBetween"
				width="100%">
				<HBox renderType="Bare" justifyContent="SpaceBetween">
					<Button text="Punch In" type="Accept" width="100%"></Button>
					
				</HBox>
				<HBox renderType="Bare" justifyContent="SpaceBetween">
					<Button text="Punch Out" type="Reject" width="100%"></Button>
				</HBox>
			</VBox>
		</f:content>
	</f:Card>

    </Page>
</mvc:View>